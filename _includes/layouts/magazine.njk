---
layout: layouts/base.njk
templateClass: tmpl-post
---
<script>
document.querySelector(‘body’).classList.add(‘mag’);
</script>  
<div id="page1" class="page">
<div class="post__meta">
  <time datetime="{{ date | htmlDateString }}">{{ date.getFullYear() }}-{{ ((date.getMonth() + 1) + '').padStart(2,'0') }} </time>
  <span class="post__tags">{% for tag in tags %}{%- if collections.tagList.indexOf(tag) != -1 -%}{% set tagUrl %}/tags/{{ tag }}/{% endset %}<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>{%- endif -%}{% endfor %}</span>
</div>
<h1>{{ title }}</h1>
{{ content | safe }}
</div>

