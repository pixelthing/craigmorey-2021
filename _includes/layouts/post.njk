---
layout: layouts/base.njk
templateClass: post
---

<figure class="post__hero">
  <div class="header__doppel" aria-hidden="true">
    <h3 class="header__home"><a href="{{ '/' | url }}" class="header__home__link"><span class="header__home__icon">&#10012;</span>{{ metadata.title }}</a></h3></h3>
  </div>
  <picture>
    <source media="(max-width:599px)" srcset="../../img/{{ hero }}-sm.jpeg" />
    <source media="(max-width:1799px)" srcset="../../img/{{ hero }}-lg.jpeg" />
    <source media="(min-width:1800px)" srcset="../../img/{{ hero }}-xl.jpeg" />
    <img src="../../img/{{ hero }}-xl.jpeg" loading="eager" width="{{ hero|imageWidth }}" height="{{ hero|imageHeight }}" />
  </picture>
</figure> 

<div class="post__content">

<div class="post__meta">
  <a href="/" class="post__back">&#9666; <span>back</span></a>
  <time class="post__date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
  <span class="post__tags">{% for tag in tags %}{%- if collections.tagList.indexOf(tag) != -1 -%}{% set tagUrl %}/tags/{{ tag }}/{% endset %}<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>{%- endif -%}{% endfor %}</span>
</div>

<h1 class="post__title">{{ title }}</h1>

{%- if description -%}<h3 class="post__sub">{{ description }}</h3>{%- endif -%}

{{ content | safe }}

</div>

