<ol reversed class="list" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  {% if post.data.status != 'draft' %}
  <li class="list__item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="list__link">
      <img src="../../img/{{ post.data.hero }}-tb.jpeg" loading="lazy" class="list__thumb" />
      <div class="list__text">      
        <h3 class="list__title">{{ post.data.title }}</h3>
        <time class="list__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <span href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</span>
          {%- endif -%}
        {% endfor %}
      </div>
    </a>
  </li>
  {%- endif -%}
{% endfor %}
</ol>
